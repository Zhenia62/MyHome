<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainViewFragment.MoreSurveyActivity"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#272b46"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            tools:ignore="MissingConstraints"
            app:title="Опрос"
            app:titleTextColor="#fff"
            tools:layout_editor_absoluteY="0dp" />

        <ImageView
            android:id="@+id/backAct"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_back"
            android:layout_centerVertical="true"
            android:layout_alignRight="@id/toolbar2"/>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:padding="8dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:padding="8dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/mainHeader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:text="Какой-то опрос"
                        android:textColor="#1c70d1"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/mainTextSu"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="  В жкх сказали, что в этом году будет капремонт. Но ведь до конца года 6 месяцев, конкретно не говорят и делать ничего не собираются. Получается, что до капремонта мы должны все это терпеть. Терпеть, что на голову льется, что квартиры затапливает, что лифт останавливают, что связь становится плохой и т.д и т.п."
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="italic"
                        android:layout_marginBottom="15dp"/>


                    <RadioGroup
                        android:id="@+id/radioGroup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/radioButton1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="Потребовать от администрации города Рязани заменить деревья, организовать ухаживание за ними. Наказать ответственных за контроль их состояния."
                            android:textSize="16dp"/>

                        <RadioButton
                            android:id="@+id/radioButton2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Согласиться с тем, что для чиновников это не главная задача. Пусть будет как будет."
                            android:textSize="16dp"/>

                        <RadioButton
                            android:id="@+id/radioButton3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Какой-то еще вариант"
                            android:layout_marginTop="8dp"
                            android:textSize="16dp"/>

                    </RadioGroup>



                    <LinearLayout
                        android:id="@+id/dopInfo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical"
                        android:gravity="right">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginEnd="10dp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:layout_marginRight="10dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_date_info" />

                            <TextView
                                android:id="@+id/dateStartView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentTop="true"
                                android:layout_marginStart="34dp"
                                android:tooltipText="Дата начала"
                                android:layout_marginLeft="34dp"
                                android:layout_marginTop="3dp"
                                android:gravity="left"
                                android:text="22.12.2010"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#272b46"
                                android:textSize="14sp" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_marginEnd="80dp"
                                android:layout_marginRight="80dp"
                                android:src="@drawable/ic_views_info" />
                            <TextView
                                android:id="@+id/viewsView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:tooltipText="Просмотры"
                                android:layout_marginEnd="45dp"
                                android:layout_marginRight="45dp"
                                android:gravity="right"
                                android:text="2100"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#272b46"
                                android:textSize="14sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:layout_marginRight="10dp">


                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_time_info" />

                            <TextView
                                android:id="@+id/dateStopView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentTop="true"
                                android:layout_marginStart="34dp"
                                android:layout_marginLeft="34dp"
                                android:layout_marginTop="3dp"
                                android:tooltipText="дата окончания"
                                android:gravity="left"
                                android:text="02.14.2010"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#272b46"
                                android:textSize="14sp" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_marginEnd="80dp"
                                android:layout_marginRight="80dp"
                                android:src="@drawable/ic_voted_info" />

                            <TextView
                                android:id="@+id/votedView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:tooltipText="Проголосовало"
                                android:layout_marginEnd="45dp"
                                android:layout_marginRight="45dp"
                                android:gravity="right"
                                android:text="2000"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#272b46"
                                android:textSize="14sp" />
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="15dp"
                        android:gravity="right">
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/vk"/>
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginStart="5dp"
                            android:src="@drawable/mail" />
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginStart="5dp"
                            android:src="@drawable/f"/>
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginStart="5dp"
                            android:src="@drawable/tv"/>
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginStart="5dp"
                            android:src="@drawable/odn"/>
                    </LinearLayout>
                    <Button
                        android:id="@+id/vote"
                        style="@style/Widget.AppCompat.Button.Colored"
                        android:layout_width="200sp"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_gravity="center"
                        android:background="@drawable/start_button1"
                        android:text="@string/vote"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    </ScrollView>
</LinearLayout>