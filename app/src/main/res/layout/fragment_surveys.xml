<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/newsCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:padding="8dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/images"
                android:src="@drawable/question"
                android:layout_height="50dp"
                android:layout_width="50dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:padding="8dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/mainHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:text="Какой-то опрос"
                    android:textColor="#1c70d1"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/mainTextSu"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="  В жкх сказали, что в этом году будет капремонт. Но ведь до конца года 6 месяцев, конкретно не говорят и делать ничего не собираются. Получается, что до капремонта мы должны все это терпеть. Терпеть, что на голову льется, что квартиры затапливает, что лифт останавливают, что связь становится плохой и т.д и т.п."
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:textStyle="italic" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                        <Button
                            android:id="@+id/MoreInformationAboutComplaint"
                            style="@style/Widget.AppCompat.Button.Colored"
                            android:layout_width="100sp"
                            android:layout_marginTop="5dp"
                            android:layout_alignParentRight="true"
                            android:layout_height="35dp"
                            android:background="@drawable/start_button2"
                            android:text="@string/more"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp" />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/dopInfo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="right">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginEnd="10dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_marginRight="10dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_date_info" />

                        <TextView
                            android:id="@+id/dateStartView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="34dp"
                            android:tooltipText="Дата начала"
                            android:layout_marginLeft="34dp"
                            android:layout_marginTop="3dp"
                            android:gravity="left"
                            android:text="text"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#272b46"
                            android:textSize="14sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginEnd="80dp"
                            android:layout_marginRight="80dp"
                            android:src="@drawable/ic_views_info" />
                        <TextView
                            android:id="@+id/viewsView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:tooltipText="Просмотры"
                            android:layout_marginEnd="45dp"
                            android:layout_marginRight="45dp"
                            android:gravity="right"
                            android:text="text"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#272b46"
                            android:textSize="14sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_marginRight="10dp">


                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_time_info" />

                        <TextView
                            android:id="@+id/dateStopView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="34dp"
                            android:layout_marginLeft="34dp"
                            android:layout_marginTop="3dp"
                            android:tooltipText="дата окончания"
                            android:gravity="left"
                            android:text="text"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#272b46"
                            android:textSize="14sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginEnd="80dp"
                            android:layout_marginRight="80dp"
                            android:src="@drawable/ic_voted_info" />

                        <TextView
                            android:id="@+id/votedView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:tooltipText="Проголосовало"
                            android:layout_marginEnd="45dp"
                            android:layout_marginRight="45dp"
                            android:gravity="right"
                            android:text="text"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#272b46"
                            android:textSize="14sp" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>