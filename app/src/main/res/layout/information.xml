<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal"
        android:layout_marginRight="10dp">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_time_info" />

            <TextView
                android:id="@+id/dateStopView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="34dp"
                android:layout_marginLeft="34dp"
                android:layout_marginTop="3dp"
                android:gravity="left"
                android:text="text"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#272b46"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="80dp"
                android:layout_marginRight="80dp"
                android:src="@drawable/ic_voted_info" />

            <TextView
                android:id="@+id/votedView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="45dp"
                android:layout_marginRight="45dp"
                android:gravity="right"
                android:text="text"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#272b46"
                android:textSize="14sp" />
        </RelativeLayout>



        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal"
            android:layout_marginRight="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_date_info" />

            <TextView
                android:id="@+id/dateStartView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="34dp"
                android:layout_marginLeft="34dp"
                android:layout_marginTop="3dp"
                android:gravity="left"
                android:text="text"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#272b46"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="90dp"
                android:layout_marginRight="90dp"
                android:src="@drawable/ic_views_info" />
            <TextView
                android:id="@+id/viewsView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="55dp"
                android:layout_marginRight="55dp"
                android:gravity="right"
                android:text="text"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#272b46"
                android:textSize="14sp" />
        </RelativeLayout>
    </LinearLayout>


        </android.support.constraint.ConstraintLayout>
