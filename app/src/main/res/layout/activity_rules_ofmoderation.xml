<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.RestFragment"
    android:background="#DCDCDC"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#272b46"
            android:layout_gravity="center"
            android:textSize="16dp"
            android:text="Единые правила модерации"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#272b46"
            android:text="1. Общие положения"/>

        <ListView
            android:id="@+id/List1"
            android:layout_width="match_parent"
            android:layout_height="870dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#272b46"
            android:text="2. Причины отклонения сообщений пользователя"/>
        <ListView
            android:id="@+id/List2"
            android:layout_width="match_parent"
            android:layout_height="1320dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#272b46"
            android:text="3. Основания для ограничения действий пользователя"/>

        <ListView
            android:id="@+id/List3"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" />
    </LinearLayout>
    </ScrollView>
</RelativeLayout>