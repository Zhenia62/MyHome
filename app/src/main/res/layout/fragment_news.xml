<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/newsCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:padding="8dp"
        android:orientation="vertical">

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
        <ImageView
            android:id="@+id/images"
            android:src="@drawable/panda"
            android:layout_height="60dp"
            android:layout_width="60dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:padding="8dp"
            android:orientation="vertical">
        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:text="Гордеева Татьяна"
            android:textColor="#1c70d1"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/address"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:text="Россия, Рязань, улица Боголюбова, 39"
            android:textColor="#757575"
            android:textSize="10sp" />
        <TextView
            android:id="@+id/type"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:text="Аварийные деревья"
            android:textColor="#1c70d1"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/mainText"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="  В жкх сказали, что в этом году будет капремонт. Но ведь до конца года 6 месяцев, конкретно не говорят и делать ничего не собираются. Получается, что до капремонта мы должны все это терпеть. Терпеть, что на голову льется, что квартиры затапливает, что лифт останавливают, что связь становится плохой и т.д и т.п."
            android:textColor="#000000"
            android:textSize="12sp"
            android:textStyle="italic" />


        <RelativeLayout
            android:id="@+id/relDop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
        <TextView
            android:id="@+id/date"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30.05.2019:  "
            android:textColor="#757575"
            android:textSize="10sp"
            android:textStyle="normal" />

            <TextView
                android:id="@+id/comment"
                android:visibility="invisible"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Комментировать"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="6dp"
                android:textColor="#1c70d1"
                android:textSize="10sp"
                android:textStyle="normal"
                android:layout_alignParentEnd="true" />
            </LinearLayout>

        </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
        <Button
            android:id="@+id/newComplaint"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="100sp"
            android:layout_height="35dp"
            android:background="@drawable/start_button2"
            android:text="@string/more"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />
    </LinearLayout>
</android.support.v7.widget.CardView>